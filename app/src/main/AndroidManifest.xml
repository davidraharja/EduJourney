<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.edujourney">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KoinStarter"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduJourney">
        <activity android:name=".ui.profile.AboutActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.history.HistoryActivity" />
        <activity android:name=".DetailModuleActivity" />
        <activity
            android:name=".ui.detail.DetailCourseActivity"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".ui.profile.EditProfileActivity" />
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".ui.login.RegisterActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
    </application>

</manifest>