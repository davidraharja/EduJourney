<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:elevation="10dp"
        android:src="@drawable/persegi_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        tools:src="@tools:sample/avatars"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="@+id/tab"
        app:layout_constraintTop_toTopOf="@+id/tab" />

    <TextView
        android:id="@+id/tv_title_course_history"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:elevation="10dp"
        android:layout_marginTop="28dp"
        android:text="Ini Judulnya"
        app:layout_constraintStart_toEndOf="@+id/poster"
        app:layout_constraintTop_toTopOf="@+id/tab" />

    <TextView
        android:id="@+id/tv_tgl"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:elevation="10dp"
        android:layout_marginTop="28dp"
        android:text="01-11-00"
        app:layout_constraintStart_toEndOf="@+id/poster"
        app:layout_constraintTop_toTopOf="@+id/tv_title_course_history" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:elevation="10dp"
        android:gravity="center_vertical|right"
        android:text="Rp.000.000.000"
        app:layout_constraintEnd_toEndOf="@+id/tab"
        app:layout_constraintTop_toBottomOf="@+id/tv_tgl" />


</androidx.constraintlayout.widget.ConstraintLayout>