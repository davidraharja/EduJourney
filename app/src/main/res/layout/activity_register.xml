<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/bgRegister"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:src="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="EduJourney"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/bgRegister"
        app:layout_constraintStart_toStartOf="@+id/bgRegister"
        app:layout_constraintTop_toTopOf="@+id/bgRegister"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/subtitleRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Place to Start your Education"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/bgRegister"
        app:layout_constraintStart_toStartOf="@+id/bgRegister"
        app:layout_constraintTop_toBottomOf="@+id/titleRegister" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="148dp"
        android:src="@drawable/ic_baseline_person_outline_dark_24"
        app:layout_constraintStart_toStartOf="@+id/bgRegister"
        app:layout_constraintTop_toBottomOf="@+id/subtitleRegister" />

    <EditText
        android:id="@+id/edt_registerEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="@+id/bgRegister"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Logo"
        app:layout_constraintTop_toBottomOf="@+id/subtitleRegister" />

    <Button
        android:id="@+id/btn_registerNow"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn"
        android:elevation="10dp"
        android:text="Register Now"
        app:layout_constraintEnd_toEndOf="@+id/bgRegister"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/bgRegister"
        app:layout_constraintTop_toBottomOf="@+id/edt_registerEmail" />

    <Button
        android:id="@+id/btn_backLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_btn"
        android:elevation="10dp"
        android:text="Already Have Account? Login!"
        app:layout_constraintEnd_toEndOf="@+id/bgRegister"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/bgRegister"
        app:layout_constraintTop_toBottomOf="@+id/btn_registerNow" />

</androidx.constraintlayout.widget.ConstraintLayout>